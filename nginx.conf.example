# ============================================
# Nginx 配置文件示例
# 北京安杰信达国际物流有限公司网站
# ============================================

# 假设项目部署路径：/var/www/anjet-sender
# 假设域名：www.anjet-sender.com 或 anjet-sender.com

server {
    # 监听端口（HTTP）
    listen 80;
    
    # 服务器域名（根据实际情况修改）
    server_name www.anjet-sender.com anjet-sender.com;
    
    # 网站根目录（指向构建后的 dist 目录）
    # 注意：需要将 dist 目录下的所有文件复制到这个路径
    root /var/www/anjet-sender/dist;
    
    # 默认首页文件
    index index.html;
    
    # 字符编码
    charset utf-8;
    
    # 日志配置
    access_log /var/log/nginx/anjet-sender-access.log;
    error_log /var/log/nginx/anjet-sender-error.log;
    
    # 主配置：处理所有请求
    location / {
        # 首先尝试访问请求的文件，如果不存在则尝试目录，最后都返回 index.html
        # 这是 SPA（单页应用）路由的关键配置
        try_files $uri $uri/ /index.html;
    }
    
    # 静态资源缓存配置（CSS、JS、图片等）
    location ~* \.(jpg|jpeg|png|gif|ico|css|js|svg|woff|woff2|ttf|eot)$ {
        # 缓存 30 天
        expires 30d;
        # 添加缓存控制头
        add_header Cache-Control "public, immutable";
        # 启用 gzip 压缩
        gzip_static on;
    }
    
    # 图片资源特殊处理
    location /images/ {
        # 图片缓存 90 天
        expires 90d;
        add_header Cache-Control "public, immutable";
        # 允许跨域（如果需要）
        add_header Access-Control-Allow-Origin *;
    }
    
    # 禁止访问隐藏文件
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }
    
    # 禁止访问备份文件
    location ~ ~$ {
        deny all;
        access_log off;
        log_not_found off;
    }
    
    # Gzip 压缩配置（提高传输效率）
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_types text/plain text/css text/xml text/javascript application/javascript application/xml+rss application/json;
    gzip_comp_level 6;
    
    # 安全头设置
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
}

